{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,     
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* QUAN TRỌNG 1: Thêm types "node" để file API không báo lỗi process.env */
    "types": ["node", "vite/client"],

    /* QUAN TRỌNG 2: Cấu hình Alias khớp với vite.config.ts */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  /* QUAN TRỌNG 3: Báo cho TS biết phải kiểm tra cả thư mục api */
  "include": ["src", "api"],
  "exclude": ["node_modules"]
}